<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:background="@drawable/round_corner">
    <TextView
        android:id="@+id/menu_title"
        android:layout_height="32dp"
        android:layout_width="match_parent"
        android:text="메뉴"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:paddingTop="4dp"
        android:background="#ff40c4ff"
        android:typeface="sans"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/menu_title"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/circle_mark_icon"
            android:id="@+id/circle_mark_icon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/xmark_icon"
            android:id="@+id/x_mark_icon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/direction_mark_icon"
            android:id="@+id/direction_mark_icon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/redqube_mark_icon"
            android:id="@+id/red_qube_icon" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/blueqube_mark_icon"
            android:id="@+id/blue_qube_icon" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/greenqube_mark_icon"
            android:id="@+id/green_qube_icon" />
    </LinearLayout>
</RelativeLayout>
