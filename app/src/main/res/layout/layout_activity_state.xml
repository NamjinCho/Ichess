<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8583f3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|bottom">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo_main"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="33dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="138dp"
            android:layout_height="100dp"
            android:src="@drawable/bg_input_login"
            android:scaleType="fitXY"
            android:layout_marginLeft="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="88dp" />

        <TextView
            android:id="@+id/name_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조남진"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/level_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/levelIcon"
            android:layout_toEndOf="@+id/levelIcon" />

        <TextView
            android:id="@+id/exp_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 %"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:singleLine="false" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="23dp"
            android:height="?actionBarSize"
            android:background="@android:color/transparent"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="138dp"
            android:layout_height="2dp"
            android:src="@drawable/leftform_line"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_marginTop="34dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="138dp"
            android:layout_height="2dp"
            android:src="@drawable/leftform_line"
            android:scaleType="fitXY"
            android:layout_below="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_marginTop="28dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="13dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView2"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레벨"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="13dp"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignLeft="@+id/imageView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경험치"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="13dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2" />

        <RelativeLayout
            android:layout_width="143dp"
            android:layout_height="187dp"
            android:id="@+id/relativeLayout"
            android:layout_marginRight="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="88dp"
            android:onClick="viewGame">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="187dp"
                android:id="@+id/imageView12"
                android:scaleType="fitXY"
                android:src="@drawable/btn_white"/>

            <ImageView
                android:layout_width="134dp"
                android:layout_height="126dp"
                android:id="@+id/imageView13"
                android:scaleType="fitXY"
                android:src="@drawable/main_img03"
                android:layout_margin="4dp"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기보 보기"
                android:id="@+id/textView12"
                android:textColor="#f18f6b"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/imageView13"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Game"
                android:id="@+id/textView13"
                android:textColor="#f18f6b"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/textView12"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="143dp"
            android:layout_height="187dp"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_toStartOf="@+id/relativeLayout"
            android:id="@+id/relativeLayout2"
            android:layout_marginRight="8dp"
            android:onClick="lecture">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="187dp"
                android:id="@+id/imageView14"
                android:scaleType="fitXY"
                android:src="@drawable/btn_white" />

            <ImageView
                android:layout_width="134dp"
                android:layout_height="126dp"
                android:id="@+id/imageView15"
                android:scaleType="fitXY"
                android:src="@drawable/main_img02"
                android:layout_margin="4dp"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의"
                android:id="@+id/textView14"
                android:textColor="#4d8176"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/imageView15"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lecture"
                android:id="@+id/textView15"
                android:textColor="#4d8176"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/textView14"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="143dp"
            android:layout_height="187dp"
            android:layout_alignTop="@+id/relativeLayout2"
            android:layout_toStartOf="@+id/relativeLayout2"
            android:layout_marginRight="8dp"
            android:id="@+id/relativeLayout3"
            android:onClick="quiz">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="187dp"
                android:id="@+id/imageView16"
                android:scaleType="fitXY"
                android:src="@drawable/btn_white" />

            <ImageView
                android:layout_width="134dp"
                android:layout_height="126dp"
                android:id="@+id/imageView17"
                android:scaleType="fitXY"
                android:src="@drawable/main_img01"
                android:layout_margin="4dp"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문제 풀기"
                android:id="@+id/textView16"
                android:textColor="#6e9aca"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/imageView17"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:id="@+id/textView17"
                android:textColor="#6e9aca"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/relativeLayout3"
            android:layout_alignStart="@+id/imageView2">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="50dp"
                android:id="@+id/imageView18"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/btn_small" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView19"
                android:src="@drawable/icon_lanking"
                android:layout_marginLeft="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="랭킹"
                android:id="@+id/textView18"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#8583f3"
                android:layout_toEndOf="@+id/imageView19"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:id="@+id/textView19"
                android:textSize="14sp"
                android:textColor="#8583f3"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView18"
                android:layout_toEndOf="@+id/imageView19" />

        </RelativeLayout>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:id="@+id/levelIcon"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignStart="@+id/name_info_text"
            android:src="@drawable/level_01" />

    </RelativeLayout>

</FrameLayout>