<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout

        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/showPgnBackground"
            android:layout_width="213dp"
            android:layout_height="160dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textbox"
                />

            <ImageView
                android:background="@drawable/bg_make_black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="9dp"
                android:layout_width="196dp"
                android:layout_height="26dp"
                android:id="@+id/imageView" />
            <ImageView
                android:background="@drawable/img_correct03"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="9dp"
                android:layout_width="176dp"
                android:layout_height="136dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true" />


            <ScrollView
                android:layout_width="295dp"
                android:layout_height="136dp"
                android:id="@+id/scrollV"
                android:fillViewport="false">
                <LinearLayout
                    android:id="@+id/showPgn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="213dp"
            android:layout_height="53dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/buttonLayout"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textbox"
                />
            <FrameLayout
                android:id="@+id/pre_1"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/pre_2"
                android:layout_toStartOf="@+id/pre_2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_circlebg"/>
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/icon_prev01"
                    android:layout_gravity="center"/>
            </FrameLayout>



            <FrameLayout
                android:id="@+id/pre_2"
                android:background="#00000000"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:scaleType="fitCenter"
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:layout_alignTop="@+id/textView"
                android:layout_toStartOf="@+id/textView">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_circlebg"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/icon_prev02"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Auto"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />



            <FrameLayout
                android:id="@+id/next_2"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/textView"
                android:layout_toEndOf="@+id/textView">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_circlebg"/>
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/icon_next02"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/next_1"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:layout_alignTop="@+id/next_2"
                android:layout_toEndOf="@+id/next_2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_circlebg"/>
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/icon_next01"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="213dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="69dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_height="46dp">

                <ImageView
                    android:id="@+id/pre"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_white"
                    android:layout_width="69dp"
                    android:layout_height="46dp"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_prev_blue"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#6e9aca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="이전"
                    />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6e9aca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_width="69dp"
                android:layout_height="46dp">

                <ImageView
                    android:src="@drawable/btn_white"
                    android:layout_width="69dp"
                    android:layout_height="46dp"
                    android:scaleType="fitXY"
                    android:text="quiz"
                    android:id="@+id/next"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_next_blue"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#6e9aca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="다음"
                    />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#6e9aca"
                    android:layout_width="46dp"
                    android:layout_height="0dp"
                    android:text="Next"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_width="69dp"
                android:layout_height="46dp">

                <ImageView
                    android:src="@drawable/btn_white"
                    android:layout_width="69dp"
                    android:layout_height="46dp"
                    android:scaleType="fitXY"
                    android:id="@+id/hint"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_hint_blue"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#6e9aca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="힌트"
                    />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#6e9aca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="127dp"
            android:layout_height="296dp"
            android:background="@drawable/bg_righttable"
            />

        <TextView
            android:id="@+id/no"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:text="No"
            android:textColor="#bfc7d0"
            android:layout_width="20dp"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/name"
            android:text="이름"
            android:layout_marginTop="1dp"
            android:textColor="#bfc7d0"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/no" />
        <TextView
            android:text="시간"
            android:layout_marginTop="1dp"
            android:textColor="#bfc7d0"
            android:layout_marginLeft="5dp"
            android:id="@+id/takeTime"
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/name"
            />


        <ListView
            android:id="@+id/rankList"
            android:layout_width="127dp"
            android:layout_height="270dp"
            android:layout_below="@+id/no"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="26dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="53dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="80dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="107dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="134dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="160dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="187dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="214dp"
            android:background="@drawable/sub_line_blue"
            />
        <ImageView
            android:layout_width="117dp"
            android:layout_height="1dp"
            android:layout_below="@+id/no"
            android:layout_marginTop="241dp"
            android:background="@drawable/sub_line_blue"
            />


    </RelativeLayout>




