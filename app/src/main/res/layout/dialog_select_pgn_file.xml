<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:minWidth="600dp"
    android:minHeight="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/btn_white"
            android:scaleType="fitXY"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fileView"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="80dp"
            />

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="43dp"
            android:id="@+id/frameLayout2"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/fileView"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_white_1b"
                android:scaleType="fitXY"
                android:onClick="cancleIcon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Cancle"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/frameLayout2"
            android:layout_toEndOf="@+id/frameLayout2"
            android:layout_marginLeft="15dp"
            android:onClick="selectIcon">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_grey"
                android:scaleType="fitXY"
                android:layout_gravity="left|center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="OK"/>
        </FrameLayout>
        />
    </RelativeLayout>
</RelativeLayout>